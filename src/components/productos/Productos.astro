---
import Item from "./Item.astro"
import { Image } from "astro:assets";
interface Props {
    sectionTitle?: string; 
    imgMobil: string;
    imgPc: string;
}
const {sectionTitle, imgMobil, imgPc } = Astro.props;
---

<section
