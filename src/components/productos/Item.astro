---
interface Props {
    id: number;
    imgMobil: string;
    imgPc: string;
    title?: string;
    subtitle: string;
    price: Number;
    arrayColor?: string[];
    url_imagen: string;
    slug: string;
}
const { id, imgMobil, imgPc, title, subtitle, price, arrayColor, url_imagen,slug } =
    Astro.props;
console.log("ID PRODUCTO:" + id);
