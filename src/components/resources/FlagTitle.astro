---
import Flag from "../icons/Flag.astro";
interface Props {
    title?:string
    subtitle?:string
}
const {title, subtitle} = Astro.props;
---
<span class="flex flex-row gap-1 text-left items-center" style=" width: 20vw; min-width: 200px;">
    <span class=" bg-white p-2 rounded-xl " style="height: fit-content; width: fit-content ">
        <Flag w="35" h="25" ></Flag>
    </span>
    <span class="text-left bg-white rounded-xl p-1 pl-2 w-full " style="line-height: 110px;">                
        <h3 class="text-xs  -mb-1 md:text-sm uppercase font-semibold  ">{title}</h3>
        <p class="m-0 text-xl " >{subtitle}</p>
    </span> 
    
    
</span>