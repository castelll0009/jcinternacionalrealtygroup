---
import LogoCAD from "../components/CADD/logo-CAD.astro";
import CreditCard from "../components/pages/CreditCard.astro";
import Layout from "../layouts/layout.astro";
import clientsData from "../config/clientData.json";
import PricingCard from "../components/pages/PricingCard.astro";
import CardContact from "../components/pages/CardContact.astro";
---

<meta charset="UTF-8" />
<Layout title={clientsData.web_name} subtitle={clientsData.subtitle}>
    <section
        class="section flex flex-col md:flex-row gap-10  text-left text-secondary dark:text-primary"
        style="padding-top: 160px;"
    >
        <div class="flex-1 flex flex-col gap-5">
            <span class="">
                <LogoCAD />
            </span>

            <div>
                <h1 class="text-3xl md:text-5xl lg:text-6xl xl:text-7xl text-secondary pb-5 md:pb-10 dark:text-primary">
                    Web Design/Diseño Web
                  </h1>
                  
                <div class="max-w-[600px]">
                    <div class="max-h-[300px] overflow-y-auto">
                      <p>
                        Expertos en diseño de páginas web: nuestros ingenieros y
                        artistas se unen para crear los diseños más modernos y
                        auténticos para ti y tus clientes.
                        <br />
                        <br />
                        Utilizamos frameworks de última tecnología para automatizar
                        tus servicios. ¡Próximamente integraremos inteligencia artificial
                        (IA)!
                      </p>
                    </div>
                </div>
            </div>
                  
                  
            <div class="pt-10 pb-10">
                <CreditCard />
            </div>            

        </div>
 
    </section>
   


    <section class="section p-10 flex flex-col justify-center" style="" >
                   
        <h2 class="text-3xl md:text-5xl lg:text-6xl xl:text-7xl text-secondary pb-5 md:pb-10 dark:text-primary">
           Planes, Precios de Compra
          </h2>
        <div class="flex-1 flex flex-col flex-wrap md:flex-wrap lg:flex-nowrap  pt-10 pb-10 md:flex-row gap-16 items-center justify-center">                                 
              
            <PricingCard
            category="web"
            title="Cheaper"
            price="259.00"
            duration="Lading Page"
            availableItems={[
              "Landing(pagina Aterrizaje) Standar",
              "Diseño Standar",
              "navegacion basica, link a whatsapp, redes",
            ]}
            unavailableItems={[
              "Gestor de contenido Interfaz Admin o CMS",
              "SEO",
              "Contenido de publicidad y marketing",
              "Asesoria creacion y publicacion de anuncios",
              "Garantia de cambios y ajustes 1 año",
            ]}
          />

          <PricingCard
            category="web"
          title="Recomended"
          price="1000.00"
          duration="Standar Page"
          availableItems={[
            "Landing(pagina Aterrizaje) page basica",
            "Diseño basico",
            "navegacion basica, link a whatsapp, redes",
            "Gestor de contenido Interfaz Admin o CMS", 
            "Garantia de cambios y ajustes 6 meses",
          ]}
          unavailableItems={[
          
            "SEO",
            "Contenido de publicidad y marketing",
            "Asesoria creacion y publicacion de anuncios",
        
          ]}
        />
        <PricingCard
          category="web"
          title="Premium CAD(Code, Delta, Ads)"
          price="2559.00"
          duration="Selling Page"
          availableItems={[
            "Landing(pagina Aterrizaje)",
                    "Diseño Personalizado  Market",
                    "Navegacion basica, link a whatsapp, redes",                                    
                    "Gestor de contenido Interfaz Admin o CMS",
                    "Garantia de cambios y ajustes 1 año",
                    "Asesoria creacion y publicacion de anuncios",
                    "campaña SEO para tu pagina web.",     
                    "Branding publicidad y marketing",
                    "Construcción del enlaces(link Building)",                    
                    "Garantia aumento Autoridad de dominio en 6 meses",           
          ]}
          unavailableItems={[
            // Elementos no disponibles para Premium CAD
          ]}
        />
        </div>
       
    
    </section>
    <CardContact></CardContact>
</Layout>
